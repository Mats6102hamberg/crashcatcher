# CrashCatcher Production Environment
# Copy this to .env.prod and update with your actual values

# Domain Configuration
DOMAIN=demo.crashcatcher.se

# Database Configuration
POSTGRES_DB=security_monitor
POSTGRES_USER=crashcatcher_user
POSTGRES_PASSWORD=your_super_secure_db_password_here_change_this

# Backend Security
SECRET_KEY=your_super_secret_jwt_signing_key_change_this_in_production
API_KEY=your_production_api_key_for_watchdog_communication

# SSL/TLS Configuration (handled by Caddy)
# No manual SSL config needed - Caddy handles Let's Encrypt automatically

# Performance Tuning
MAX_CPU_USAGE=85.0
MAX_MEMORY_USAGE=90.0

# Security Monitoring
SUSPICIOUS_PROCESSES=nc,netcat,nmap,tcpdump,wireshark,nikto,sqlmap,burpsuite
MONITORED_PORTS=22,80,443,3389,5432,3306,1433,8080,9000

# Backup Settings (optional)
BACKUP_RETENTION_DAYS=30
