# CrashCatcher Environment Variables
# Copy this file to .env and customize the values

# Database Configuration
POSTGRES_DB=security_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Backend API Configuration
DATABASE_URL=postgresql://postgres:your_secure_password_here@db/security_monitor
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY=your_api_key_here

# Watchdog Configuration
WATCHDOG_API_KEY=your_api_key_here
INCIDENTS_URL=http://backend:8000/incidents
CHECK_INTERVAL_SECONDS=20

# Performance Thresholds
MAX_CPU_USAGE=80.0
MAX_MEMORY_USAGE=85.0

# Security Monitoring
SUSPICIOUS_PROCESSES=nc,netcat,nmap,tcpdump
MONITORED_PORTS=22,80,443,3389

# Logging
LOG_FILE=/app/logs/security_watchdog.log
PID_FILE=/app/security_watchdog.pid

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# Development
NODE_ENV=development
